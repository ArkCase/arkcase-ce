[Unit]
Description=Alfresco service
After=mariadb.service
BindsTo=mariadb.service

[Service]
Type=forking
ExecStart=/opt/app/alfresco/bin/startup.sh
ExecStop=/opt/app/alfresco/bin/shutdown.sh -force
User=alfresco
Group=alfresco
Restart=always
RestartSec=10
StandardOutput=syslog
StandardError=syslog
SyslogIdentifier=alfresco

[Install]
WantedBy=multi-user.target
